<section class="home">
	<div class="container p-6 py-12 mx-auto">
		<div class="header">
			<h1 class="font-bold text-center text-responsive "><%= page.title %></h1>
		</div><hr />


    <div class="row">
      <div class="col-sm-3 my-3">
          <img class="w-100 mb-1 img rounded" src="<%= page.image %>" alt="Photo of <%= page.title %>">
          <table class="table w-100 ">
              <thead >
              </thead>
              <tbody>
                <tr>
                  <th scope="row">Name:</th>
                  <td><strong><%= page.name %></strong></td>
                </tr>
                <tr>
                  <th scope="row">Status:</th>
                  <td><strong><%- page.status %></strong></td>
                </tr>
                <tr>
                  <th scope="row">Social:</th>
                  <td><strong><a target="_blank" href="<%- page.arturl %>"><%- page.arturl %></a></strong></td>
                </tr>

                </tbody>
            </table>
      </div>

      <div class="col-sm-9 my-3">
        <h2>Introduction</h2><hr />
        <p><%- page.introduction %></p><br />
      </div>
    </div>




    <div class="row">
      <div class="col-sm-12 my-3">

        <h2>Featured Fanart</h2><hr />

        <div class="wrapper">
          <div class="gallery">
            <ul>
                <% if (page.fanart.length > 0) { %>
                  <%for (i=0; i < page.fanart.length; i ++){ %>
              <li>
                <a target="_blank" href="../../images/fanart/<%- page.aurl %>/<%= page.fanart[i] %>.jpg"><img src="../../images/fanart/<%- page.aurl %>/<%= page.fanart[i] %>.jpg"></a>
              </li>
      
                  <%}%>
                <% }  %>
            </ul>
          </div>
        </div>


      </div><hr />
    </div>
</section>
        
        


